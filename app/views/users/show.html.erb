 <div class="row">
    <div class="col-md-8">
        <div class="media">
        <br />
        <% avatar_url = @user.avatar_url(128) %>
        <% if avatar_url %>
            <div class="media-left">
                <%= image_tag avatar_url, class: 'media-object' %>
            </div>
        <% end %>
            <div class="media-body">
                <h2 class="media-heading"><%= @user.name %></h2>
                <small>
                    <%= pluralize(@user.posts.count, 'post') %>,
                    <%= pluralize(@user.comments.count, 'comment') %>
                    <%= pluralize(@user.favorites.count, 'favorite') %>
                </small>
            </div>
        </div>
    </div>
</div>
 
<h2>Posts</h2>
<% if @user.posts.present? %>
    <%= render @user.posts %>
<% else %>
    <p><%= "#{@user.name} has not posted yet" %></p>
<% end %>

<h2>Comments</h2>
<% if @user.comments.present? %>
    <%= render @user.comments %>
<% else %>
    <p><%= "#{@user.name} has not commented yet" %></p>
<% end %>

<h2>Favorite Posts</h2>
<% if @user.favorites.present? %>
    <% @user.favorite_posts.each do |favorite_post| %>
        <%= render 'posts/post_favorite', post: favorite_post %>
    <% end %>
<% else %>
    <p><%= "#{@user.name} has no favorite posts" %></p>
<% end %>