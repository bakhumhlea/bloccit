<h1>Edit Post</h1>
    <div class="col-md-8">
     <%= form_for @question do |q| %>
       <div class="form-group">
         <%= q.label :title %>
         <%= q.text_field :title, class: 'form-control', placeholder: "Enter new question title" %>
       </div>
       <div class="form-group">
         <%= q.label :body %>
         <%= q.text_area :body, rows: 8, class: 'form-control', placeholder: "Enter new question content" %>
       </div>
       <div class="form-check">
         <%= q.check_box :resolved , class: 'form-check-input' %>
         <p style="display:inline;" class="form-check-label">Mark as read</p>
       </div>
       <div class="form-group">
         <%= q.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
    </div>
</div>