<h1>New Post</h1>
<div class="col-md-8">
    <%= form_for @question do |q| %>
        <div class="form-group">
            <%= q.label :title %>
            <%= q.text_field :title, class: 'form-control', placeholder: "Enter question title"  %>
        </div>
        <div class="form-group">    
            <%= q.label :body %>
            <%= q.text_area :body, class: 'form-control', style:'height:100px;', placeholder: "Enter question content" %>
        </div>
        <div class="form-group">   
            <%= q.submit "Save", class: 'btn btn-success'  %>
        </div>
    <% end %>
</div>