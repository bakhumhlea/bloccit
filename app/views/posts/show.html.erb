<h1><%= @post.title %></h1>
 
<div class="row">
   <div class="col-md-8">
     <p><%= @post.body %></p>
   </div>
   <div class="col-md-4">
    <!--edit_post_path(@post) is a helper method that is generated in routes.rb by resources :posts.--!>
     <%= link_to "Edit", edit_post_path(@post), class: 'btn btn-success' %>
     <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger',data: {confirm: 'Are your sure you want to delete this post?'} %>
   </div>
</div>